<%- include('./partials/header'); -%>

<section id="signUp">
    <div class="inline signIn-signUp-page">
        <div class="signIn-signUp-container">
            <div class="sign-heading-text">
                <h1>Sign Up</h1>
                <p>And enjoy Life during the time you just saved!</p>
            </div>
            <div class="google-facebook-box inline">
                <div class="google-btn">
                    <a href="/auth/google" role="button" class="oAuth-btn">
                        <i class="fab fa-brands fa-google"></i>
                        Sign Up with Google
                    </a>
                </div>
                <div class="facebook-btn">
                    <a href="/auth/facebook" role="button" class="oAuth-btn">
                        <i class="fab fa-brands fa-facebook-f"></i>
                        Sign Up with Facebook
                    </a>
                </div>
            </div>
            <hr class="sign-line">
            <div class="sign-form">
                <form action="/register" method="post" class="form">
                    <div class="server-error-message <%= showErrorOrNot %>">
                        <span><%=errorMessage%></span>
                    </div>
                    <div class="inline">
                        <div class="label-input">
                            <label for="username">Username</label>
                            <input type="text" id="username" name="username" required>
                            <div class="error disappear">
