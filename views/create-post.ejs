<%- include('./partials/header'); -%>
<%- include('./partials/navigation-bar'); -%>
    <section id="create-post ">
        <div class="create-post-title">
            <h1>Create Post</h1>
        </div>
        <div class="create-post-box inline">
            <form action="/createPost" method="post" class="post">
                <div class="title">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" required>
                </div>
                <div class="body-content">
                    <label for="body-content">Body Content</label>
                    <textarea name="bodyContent" id="body-content" cols="30" rows="10" required></textarea>
                </div>
                
                <div class="post-btn">
                    <input type="submit" value="Post">
                </div>

            </form>
        </div>
    </section>
<%- include('./partials/footer'); -%>